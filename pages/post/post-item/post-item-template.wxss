  .post-container {
    display: flex;
    flex-direction: column;
    margin-top: 80rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
  }
  .post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
  }
  .post-author {
    width: 60rpx;
    height: 50rpx;
    vertical-align: middle;
  }
  .post-date {
    margin-top: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
  }
  .post-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
  }
  .post-image {
    width: 100%;
    height: 870rpx;
    margin: auto 0;
    margin-bottom: 15px;
  }
  .post-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    margin: 0 20rpx 20rpx 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
  }
  .post-like {
    font-size: 13px;
    /* flex-direction: row; */
    line-height: 16rpx;
    margin-left: 10px;
  }
  .post-like-image {
    height: 16rpx;
    width: 16rpx;
    margin-right: 8px;
    vertical-align: middle;
  }
  .post-like-font {
    vertical-align: middle;
    margin-right: 20rpx;
  }
  