.container{
    display: flex;
    flex-direction: column;
    position: relative;
}
.kong{
    width: 100rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    top: 100rpx;
    margin-left: -50rpx;
    opacity: .6;
}
.head-image{
    width: 100%;
    height:789rpx ;
}
.author-data{
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}
.author{
    font-size: 34rpx;
    font-weight: 300;
    color: #333;
    vertical-align: middle;
    margin-left: 20rpx;
}
.const-text{
    font-size: 34rpx;
    color: #666;
    vertical-align: middle;
    margin-left: 20rpx;
}
.date{
    font-size: 24rpx;
    color: #999;
    vertical-align: middle;
    margin-left: 20rpx;
}
.title{
    font-size: 40rpx;
    font-weight: 700;
    color: #4b556c;
    vertical-align: middle;
    margin-left: 20rpx;
    margin-top: 20rpx;
    letter-spacing: 2px;
}
.tool{
    margin-top: 20rpx;
    position: relative;
}
.circle-img image{
    height: 90rpx;
    width: 90rpx;
    border-radius: 90rpx;
}
.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.share-img{
    margin-left: 30rpx;
}
.horizon{
    width: 100%;
    height: 2rpx;
    background-color: #666;
    vertical-align: middle;
    /* 脱离文档流， */
    position: relative;
    top: 46rpx;
    left: 0;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666;
    vertical-align: middle;
    margin-left: 20rpx;
    line-height: 40rpx;
    letter-spacing: 2px;
}
